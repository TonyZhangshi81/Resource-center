@using System.Configuration;

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ConfigurationManager.AppSettings.Get("WebsiteName")</title>
    @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/custom")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/backstrech")
    <style>
        .btn-account {
            position: relative;
            border: 0px;
            border-radius: 2px;
            background-color: transparent;
            color: #F2F2F2;
            font-family: '方正清刻本悦宋简体';
            text-decoration: none;
            overflow: hidden;
            padding: 6px 30px;
        }

            .btn-account:hover {
                color: #F2F2F2;
            }

            .btn-account:before {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                bottom: 0;
                left: 0;
                border: 1px solid rgba(255, 255, 255, 0.5);
                border-radius: 2px;
                background: transparent;
                transform: scale(1);
                transition: all 0.15s ease-out 0s;
                opacity: 1;
            }

            .btn-account:hover:before {
                transform: scale(1.1);
                opacity: 0;
            }

            .btn-account:after {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                bottom: 1px;
                left: 0;
                transform: scale(0.5);
                border: 0px;
                border-radius: 2px;
                background-color: rgba(255, 255, 255, 0.5);
                transition: all 0.15s ease-out 0s;
                opacity: 0;
            }

            .btn-account:hover:after {
                transform: scale(1);
                opacity: 1;
            }

        .link-icon {
            float: left;
            font-family: 'Weston Free';
            font-size: 18px;
            font-weight: bold;
            color: #DDDDDD;
            text-decoration: none;
            margin-right: 20px;
        }

            .link-icon:hover,
            .link-icon:focus,
            .link-icon:active {
                color: #EEEEEE;
                text-decoration: none;
            }

        .panel-login {
            width: 512px;
            background: rgba(255, 255, 255, 0.81) !important;
            filter: Alpha(opacity=81);
            -webkit-box-shadow: 5px 5px 8px rgba(55, 55, 55, 0.64);
            -moz-box-shadow: 5px 5px 8px rgba(55, 55, 55, 0.64);
            box-shadow: 5px 5px 8px rgba(55, 55, 55, 0.64);
        }

        @@media (max-width: 1440px) {
            .panel-login {
                width: 484px;
            }
        }

        @@media (max-width: 1366px) {
            .panel-login {
                width: 30%;
            }
        }

        @@media (max-width: 1280px) {
            .panel-login {
                width: 36%;
            }
        }

        @@media (max-width: 992px) {
            .panel-login {
                width: 48%;
            }
        }

        @@media (max-width: 768px) {
            .panel-login {
                width: 60%;
            }
        }

        @@media (max-width: 640px) {
            .panel-login {
                width: 80%;
            }
        }
    </style>
    <script>
        $(document).ready(function () {
            $.backstretch("../../Content/Account/LoginBack.jpg");
        });
    </script>
</head>
<body style="padding:0px; height:100%; background-size:cover; overflow:no-content;">
    <div style="height:30px; margin:20px 100px 0px 100px;">
        <a href="/Home/Index" class="link-icon" title="@ConfigurationManager.AppSettings.Get("WebsiteName") @ConfigurationManager.AppSettings.Get("WebsiteSubTitle")">
            <img src="~/Content/Icon/Gray.png" style="width:32px; height:32px;" />
        </a>
        <div style="width:360px; display:inline; float:left;">
            @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "searchForm" }))
            {
                <div class="input-group">
                    <span class="input-group-addon" style="border-radius:2px 0px 0px 2px; border:0px; background-color:rgba(255, 255, 255, 0.6);">
                        <i class="fa fa-search"></i>
                    </span>
                    <input type="search" class="form-control" placeholder="搜索 电影" style="border-radius:0px 2px 2px 0px; border:0px; background-color:rgba(255, 255, 255, 0.6); -webkit-box-shadow:none; -moz-box-shadow:none; box-shadow:none;" name="search" />
                </div>
            }
        </div>

        <div class="hidden-xs" style="display:inline; float:right;">
            <a class="btn btn-account" style="margin-right:20px;" href="/Account/Register">注册</a>
            <a class="btn btn-account" href="/Account/Login">登录</a>
        </div>
    </div>

    <div style="position:absolute; top:0; bottom:0; left:0; right:0; margin:auto; height:50%;">
        @RenderBody()
    </div>
</body>
</html>