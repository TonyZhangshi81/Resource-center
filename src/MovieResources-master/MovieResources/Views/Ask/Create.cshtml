@model MovieResources.Models.ManageAskViewModel

@{
    ViewBag.Title = "为电影 " + Model.MovieTitle + " 发布求资源";
    ViewBag.PageType = 2;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong class="font-larger">@ViewBag.Title</strong>
    </div>
    <div class="panel-body" style="padding:30px 50px;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MovieTitle)
            @Html.HiddenFor(model => model.MovieId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="center-block" style="margin-top:0px;">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control min-editor", placeholder = "说点什么吧。。。" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>

            <div class="full-width" style="margin-top:20px;">
                <input type="submit" value="提交" class="btn btn-primary btn-block" />
            </div>
        }
    </div>
</div>

