                    </th>
                    <th>
                        旧的
                    </th>
                    <th>
                        新的
                    </th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Old.Name)
                    </th>
                    <td>
                        @Html.DisplayFor(m => m.Old.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.New.Name)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Old.NameEn)
                    </th>
                    <td>
                        @Html.DisplayFor(m => m.Old.NameEn)
