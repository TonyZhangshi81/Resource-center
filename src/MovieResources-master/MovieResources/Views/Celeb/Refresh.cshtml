@model MovieResources.Models.RefreshCelebViewModel

@{
    ViewBag.Title = "更新影人 " + Model.Old.Name;
    ViewBag.PageType = 2;
}

<div class="panel panel-body text-center no-padding">
    <h4>@ViewBag.Title</h4>
</div>

