                        @Html.DisplayNameFor(m => m.Old.Aka)
                    </th>
                    <td>
                        @Html.DisplayFor(m => m.Old.Aka)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.New.Aka)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Old.AkaEn)
                    </th>
                    <td>
                        @Html.DisplayFor(m => m.Old.AkaEn)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.New.AkaEn)
