@model MovieResources.Models.MineViewModel

@{
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
    ViewBag.Title = Model.Account + "的主页";
    ViewBag.PageType = 2;
    ViewBag.NavType = 5;
}
