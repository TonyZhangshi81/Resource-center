@model MovieResources.Models.ManageAlbumViewModel

@{
    ViewBag.Title = "修改专辑";
    ViewBag.PageType = 2;
}

@using (Html.BeginForm("Edit", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.UserId)
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "请填写 专辑名称" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control min-editor", placeholder = "请填写 专辑简介" } })
                    @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cover, htmlAttributes: new { @class = "control-label" })
                <div>
                    <input type="file" name="file" class="form-control" placeholder="请选择图片" />
                    @Html.ValidationMessageFor(model => model.Cover, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" value="确认修改" class="btn btn-primary" />
            <a class="btn btn-default" href="/Album/Detail?id=@Model.Id" title="取消">取消</a>
        </div>
    </div>
}